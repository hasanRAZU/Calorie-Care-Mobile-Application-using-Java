<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_page"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10sp"
    android:background="@color/white"
    tools:context=".newAccount.LogIn"
    tools:ignore="RtlSymmetry">
    <TextView
        android:id="@+id/textView_companyName_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calorie Care"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/textView_companySubName_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A Nutrition Based Recipe Application"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingBottom="80sp"
        tools:ignore="HardcodedText"/>
    <TextView
        android:id="@+id/textView_logIn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="25sp"
        android:paddingBottom="20sp"
        tools:ignore="HardcodedText"/>
    <TextView
        android:id="@+id/textView_email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Email Address"
        android:textAlignment="textStart"
        android:paddingLeft="3sp"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"/>


    <EditText
        android:id="@+id/editText_email_login"
        android:text="HasanRazu.cse.193.gub@gmail.com"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:textSize="15sp"
        tools:ignore="Autofill,LabelFor,hardcodedText" />
    <TextView
        android:id="@+id/textView_password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Password"
        android:paddingStart="3sp"
        android:paddingTop="20sp"
        android:textSize="15sp"
        tools:ignore="RtlSymmetry,hardcodedText"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_password_login"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:paddingTop="15sp"
            android:paddingBottom="10sp"
            android:text="yourText"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="Autofill,LabelFor,hardcodedText" />

        <CheckBox
            android:id="@+id/checkBox_showPassword_login"
            android:text="show pass"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            tools:ignore="hardcodedText"/>

        <Spinner
            android:id="@+id/spinner_clientType_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_signIn_login"
            android:text="Sign In"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="ButtonStyle,hardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_forgetPassword_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Forgot Password?"
            tools:ignore="ButtonStyle,hardcodedText" />
        <Button
            android:id="@+id/button_signUp_login"
            android:text="Register Now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="ButtonStyle,hardcodedText" />

    </LinearLayout>

    <TextView
        android:id="@+id/output_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>
</LinearLayout>

