<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="30sp"
    android:paddingEnd="20sp"
    tools:ignore="RtlSymmetry">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="50sp">

        <Button
            android:id="@+id/button_goBack_SubscriptionHandler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Back"
            android:onClick="buttonGoBack"
            tools:ignore="HardcodedText,MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40sp"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="60sp"
            android:textSize="30sp"
            android:text="Subscription"
            app:layout_constraintLeft_toRightOf="@+id/button_goBack_SubscriptionHandler"
            tools:ignore="HardcodedText,MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscription:"
            tools:ignore="HardcodedText"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/editText_subscription_SubscriptionHandler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="abc@gmail.com"
            android:width="280sp"
            android:layout_marginStart="38sp"
            tools:ignore="Autofill,HardcodedText,TextFields" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="245sp"
            android:layout_marginTop="20sp"
            android:text="Add"
            android:onClick="buttonAddSubscription"
            tools:ignore="ButtonStyle,HardcodedText" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Remove"
            android:onClick="buttonRemoveSubscription"
            tools:ignore="ButtonStyle,HardcodedText" />

    </LinearLayout>
    <TextView
        android:id="@+id/textView_SubscriptionHandler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>